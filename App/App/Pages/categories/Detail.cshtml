@page
@model App.Pages.categories.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => @Model.category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => @Model.category)
        </dd>
        @foreach (var item in @Model.category.Products)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Name)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Price)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="Index">Back to List</a>

    @*<a asp-page="/CartRazor?id=">Add</a>*@
    <button asp-controller="Products" asp-action="AddProductToCart" asp-route-Id="@Model.products." type="button">Add
    </button>


</div>
