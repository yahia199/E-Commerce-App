@page
@model App.Pages.Account.loginModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="padding:20px"></div>
<form method="post">

    <div asp-validation-summary="ModelOnly"></div>

    <div >

        <div>
            <lable asp-for="LoginDTO.UserName">UserName</lable>
        </div>
        <div >

            <input type="text" asp-for="LoginDTO.UserName" />

        </div>
        <span asp-validation-for="LoginDTO.UserName"></span>

    </div>

    <div>

        <div>
            <lable asp-for="LoginDTO.Password">Password</lable>
        </div>

        <div>

            <input type="password" asp-for="LoginDTO.Password" />

        </div>
        <span asp-validation-for="LoginDTO.Password"></span>

    </div>

    <div >

        <div>
         <input type="submit" value="Login" />
        </div>

      

    </div>


</form>