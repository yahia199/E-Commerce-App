@page
@model App.Pages.Account.RegisterModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<div style="padding:20px"></div>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div asp-validation-summary="ModelOnly"></div>

    <div>

        <div>
            <lable asp-for="Input.Name">UserName</lable>
        </div>
        <div>

            <input type="text" asp-for="Input.Name" />

        </div>
        <span asp-validation-for="Input.Name"></span>

    </div>

    <div>

        <div>
            <lable asp-for="Input.Password">Password</lable>
        </div>

        <div>

            <input type="password" asp-for="Input.Password" />

        </div>
        <span asp-validation-for="Input.Password"></span>

    </div>

    <div>

        <div>
            <lable asp-for="Input.Email">Email</lable>
        </div>

        <div>

            <input type="email" asp-for="Input.Email" />

        </div>
        <span asp-validation-for="Input.Email"></span>

    </div>

    <div>

        <div>
            <input type="submit" value="Register" />
        </div>



    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}  