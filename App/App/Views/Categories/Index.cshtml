@model IEnumerable<App.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="/categories/edit/?id=@item.Id">Edit</a>
                <a href="/categories/details/?id=@item.Id">Details</a>
                <a href="/categories/delete/?id=@item.Id">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
